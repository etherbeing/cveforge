{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CVE Forge",
      "type": "debugpy",
      "request": "launch",
      "program": "__main__.py",
      "args": ["-ls", "--log-level=10", "--live-reload"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "autoReload": {
        "enabled": true,
        "include": ["**/*.py"]
      }
    },
    {
      "name": "CVE Forge: CLI Test",
      "type": "debugpy",
      "request": "launch",
      "program": "__main__.py",
      "args": ["-ls", "--log-level=10", "--live-reload", "echo", "hello world"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "autoReload": {
        "enabled": true,
        "include": ["**/*.py"]
      }
    },
    {
      "name": "CVE Forge: CLI help test",
      "type": "debugpy",
      "request": "launch",
      "program": "__main__.py",
      "args": ["-ls", "--log-level=10", "--live-reload", "--help"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "autoReload": {
        "enabled": true,
        "include": ["**/*.py"]
      }
    }
  ]
}
